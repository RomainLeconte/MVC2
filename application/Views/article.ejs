<div class="table-responsive">
    <table class="table table-striped table-bordered" ng-controller="listArticleCtrl">
        <thead>
            <tr>
                <th>#id</th>
                <th class='hide-border'>Title</th>
                <th>Content</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            <tr ng-repeat="article in articles">
                <td>{{article._id}}</td>
                <td>{{article.title}}</td>
                <td>{{article.content}}</td>
                <td><a href="/edit-article/{{article._id}}"><i class="fa fa-pencil-square-o"></i></a></td>
                <td><i class="fa fa-trash"></i></td>
            </tr>
        </tbody>
        <tfoot>
            <tr>
                <td></td>
                <td></td>
                <td><a href="/new-article/" id="add" class="btn btn-light">Ajouter</a></td>
                <td></td>
            </tr>
        </tfoot>
    </table>
</div>