<div ng-controller="listArticleCtrl">
    <h1>Article list</h1>
    <div class="card" ng-repeat="article in articles">
        <h4 class="card-header">{{article.title}}</h4>
        <div class="card-body">
            <p class="card-text">{{article.content}}</p>
            <a href="#" class="btn btn-primary">Go somewhere</a>
        </div>
    </div>
</div>